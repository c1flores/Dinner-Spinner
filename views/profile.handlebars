       <!-- Profile Page HTML -->
<section>
  <div class="container">
    <form>
    <div class="main-form">
      <div class="step step-1 active">
        <div class="form-group">
          <label for="recipe-name">Lets Start with the name of your Dish !</label>
          <input type="text" id="recipe-name" name="recipe-name" placeholder="Enter Dish Name Here !">
        </div>
        <button type="button" class="next-btn">Next</button>
      </div>

            <div class="ui form column">
                <label for="recipe-instr">Instructions:</label>
                <textarea class="form-input" id="recipe-instr" name="recipe-instr"></textarea>
            </div>
            <div class="ui form column">
                <label for="recipe-img">Upload Image:</label>
                <form action="/profile" method="POST" enctype="multipart/form-data">
                    <input type="file" name="image">
                    <input type="submit">
                </form>
            </div>
            <div class="ui form">
                <button type="submit" class="positive ui button fluid ui button">Create</button>
            </div>
            
        </div>
        <button type="button" class="previous-btn">Prev</button>
        <button type="submit" class="submit-btn">Submit</button>
      </div>

    </form>
  </div>
  </div>
</section>

    {{#if recipes.length}}


    <div class="eight wide column recipe-list">

        <h3>Personal Recipes:</h3>

        {{#each recipes as |recipe|}}
        <div class="empty-div">
            <h4><a href="/recipe/{{recipe.id}}">{{recipe.recipeName}}</a></h4>
        </div>
        <p>Created on {{format_date}}</p>

        
        <div class="empty-div ">

            <button class="negative ui button ui btn-danger" data-id="{{recipe.id}}">DELETE</button>

        <p>{{recipe.ingredients}}</p>
        <div class="empty-div">

            <button class="button btn-danger" data-id="{{recipe.id}}" DELETE></button>


        </div>
        {{/each}}
    </div>
    {{/if}}


    

    <script src="./js/profile.js"></script>
    
