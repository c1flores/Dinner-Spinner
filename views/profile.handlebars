       <!-- Profile Page HTML -->
<div class="eight wide column">
    <h3>Talk about your new favorite recipe:</h3>

    <div class="ui grid">
        <div class="three column row" id="main-form">
            <div class="ui form column">
                <label for="recipe-name">Recipe Name:</label>
                <textarea class="form-input" type="text" id="recipe-name" name="recipe-name"></textarea>
            </div>
            <div class="ui form column">
                <label for="recipe-ing">Ingredients:</label>
                <textarea class="form-input" id="recipe-ing" name="recipe-ing"></textarea>
            </div>

            <div class="ui form column">
                <label for="recipe-instr">Instructions:</label>
                <textarea class="form-input" id="recipe-instr" name="recipe-instr"></textarea>
            </div>
            <div class="ui form column">
                <label for="recipe-img">Upload Image:</label>
                <form action="/profile" method="POST" enctype="multipart/form-data">
                    <input type="file" name="image">
                    <input type="submit">
                </form>
            </div>
            <div class="ui form">
                <button type="submit" class="positive ui button fluid ui button">Create</button>
            </div>
            
        </div>
    </div>

    {{#if recipes.length}}
    <div class="eight wide column recipe-list">
        <h3>Personal Recipes:</h3>

        {{#each recipes as |recipe|}}
        <div class="empty-div">
            <h4><a href="/recipe/{{recipe.id}}">{{recipe.recipeName}}</a></h4>
        </div>
        <p>Created on {{format_date}}</p>
        <p>{{recipe.ingredients}}</p>
        <div class="empty-div">

            <button class="button btn-danger" data-id="{{recipe.id}}" DELETE></button>

        </div>
        {{/each}}
    </div>
    {{/if}}


    

    <script src="./js/profile.js"></script>
    
