<!-- Signup Form HTML -->
<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <div class="content">
        Sign-Up
      </div>
    </h2>
    <form class="ui large form signup-form">
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="address book icon"></i>
            <input
              type="text"
              name="name"
              placeholder="Name"
              id="name-signup"
            />
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="at icon"></i>
            <input
              type="text"
              name="email"
              placeholder="Email"
              id="email-signup"
            />
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <input
              type="password"
              name="password"
              placeholder="Password"
              id="password-signup"
            />
          </div>
        </div>
        <div>
          <button
            class="ui fluid large teal submit button"
            type="submit"
          >Sign-Up</button>
        </div>
      </div>

      <div class="ui error message"></div>

    </form>
  </div>
</div>

<script src="./js/signup.js"></script>